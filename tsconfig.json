/* Visit https://aka.ms/tsconfig.json to read more about this file */
{
  "compilerOptions": {
    "target": "es2016",                                   
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop":true,
    "rootDir": "src",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "outDir": "./dist",
    "removeComments": true,                                
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      /* Enable all strict */
    "skipLibCheck": true                                  
  }
}
